<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CBE1F3"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EFC8D5">

    <TextView
        android:id="@+id/settingtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-condensed-medium"
        android:shadowColor="#FFFFFF"
        android:text="Settings"
        android:textColor="#FFFFFF"
        android:textColorHint="#00504848"
        android:textSize="45sp" />

    <Button
        android:id="@+id/backcolor"
        android:layout_width="145dp"
        android:layout_height="77dp"
        android:layout_alignBottom="@id/settingtitle"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="229dp"
        android:layout_marginRight="159dp"
        android:layout_marginBottom="-163dp"
        android:background="@drawable/rounded_edittext2"
        android:fontFamily="sans-serif-condensed"
        android:text="Change Background color"
        android:textColor="#FDFDFD"
        android:textColorHint="#FFFFFF"
        android:textSize="19sp"/>

    <Button
        android:id="@+id/percentages"
        android:layout_width="145dp"
        android:layout_height="77dp"
        android:layout_alignBottom="@id/settingtitle"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="41dp"
        android:layout_marginRight="159dp"
        android:layout_marginBottom="-274dp"
        android:background="@drawable/rounded_edittext2"
        android:fontFamily="sans-serif-condensed"
        android:text="Change percentages"
        android:textColor="#FDFDFD"
        android:textColorHint="#FFFFFF"
        android:textSize="19sp"/>

    <Button
        android:id="@+id/delsavgrade"
        android:layout_width="145dp"
        android:layout_height="77dp"
        android:layout_alignBottom="@id/settingtitle"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="227dp"
        android:layout_marginRight="159dp"
        android:layout_marginBottom="-407dp"
        android:background="@drawable/rounded_edittext2"
        android:fontFamily="sans-serif-condensed"
        android:text="delete saved grades"
        android:textColor="#FDFDFD"
        android:textColorHint="#FFFFFF"
        android:textSize="19sp"/>

    <Button
        android:id="@+id/archgrades"
        android:layout_width="145dp"
        android:layout_height="77dp"
        android:layout_alignBottom="@id/settingtitle"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="159dp"
        android:layout_marginBottom="-517dp"
        android:background="@drawable/rounded_edittext2"
        android:fontFamily="sans-serif-condensed"
        android:text="archived grades"
        android:textColor="#FDFDFD"
        android:textColorHint="#FFFFFF"
        android:textSize="19sp"/>

</RelativeLayout>
    </RelativeLayout>


